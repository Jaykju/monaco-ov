    "vscode-languageserver": "^4.0.0",
    "vscode-ws-jsonrpc": "^0.0.2-1",
    "ws": "^5.0.0"
  },
  "devDependencies": {
    "@types/express": "^4.0.35",
    "@types/node": "^7.0.12",
    "@types/normalize-url": "^1.9.1",
    "@types/ws": "0.0.39",
