{
  "name": "monaco-ov",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "build": "npm run compile && webpack && npm run copy",
    "clean": "rimraf dist",
    "compile": "tsc",
    "copy": "ncp src/index.html dist/index.html",
    "prepare": "npm run clean && npm run build",
    "start": "npm run build && node dist/server.js",
    "start:watch": "nodemon",
    "test": "npm run build && testcafe",
    "watch": "tsc -w"
  },
  "dependencies": {
    "monaco-editor": "^0.17.0",
    "monaco-languageclient": "file:../monaco-languageclient/client",
    "normalize-url": "^4.5.0",
    "ov-language-server": "0.x.x",
    "ov-language-server-types": "0.x.x",
    "reconnecting-websocket": "^3.2.2"
  },
  "devDependencies": {
    "@types/express": "^4.17.2",
    "@types/node": "^12.12.14",
    "@types/ws": "^6.0.4",
    "css-loader": "^3.2.1",
    "express": "^4.17.1",
    "file-loader": "^4.3.0",
    "ncp": "^2.0.0",
    "nodemon": "^1.19.4",
    "prettier": "^1.19.1",
    "rimraf": "^3.0.0",
    "source-map-loader": "^0.2.3",
    "style-loader": "^1.0.1",
    "terser-webpack-plugin": "^2.2.3",
    "testcafe": "^1.7.0",
    "tslint": "^5.20.1",
    "tslint-config-prettier": "^1.18.0",
    "tslint-plugin-prettier": "^2.0.1",
    "typescript": "^3.7.3",
    "vscode-ws-jsonrpc": "^0.1.1",
    "webpack": "^4.41.2",
    "webpack-cli": "^3.3.10",
    "webpack-merge": "^4.2.2"
  }
}
